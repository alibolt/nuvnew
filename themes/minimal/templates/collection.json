{
  "name": "Collection",
  "type": "collection",
  "sections": [
    {
      "id": "header",
      "type": "header",
      "settings": {}
    },
    {
      "id": "collection-banner",
      "type": "collection-banner",
      "settings": {
        "showImage": true,
        "showDescription": true,
        "overlayEnabled": false,
        "height": "medium",
        "textAlignment": "center"
      }
    },
    {
      "id": "collection-products",
      "type": "collection-products",
      "settings": {
        "productsPerPage": 24,
        "columns": {
          "desktop": 4,
          "tablet": 3,
          "mobile": 2
        },
        "showFilters": true,
        "showSort": true,
        "showViewOptions": true
      }
    },
    {
      "id": "footer",
      "type": "footer",
      "settings": {}
    }
  ],
  "settings_schema": [
    {
      "name": "collection_layout",
      "label": "Collection Layout",
      "settings": [
        {
          "type": "select",
          "id": "filter_position",
          "label": "Filter Position",
          "options": [
            { "value": "sidebar", "label": "Sidebar" },
            { "value": "drawer", "label": "Drawer" },
            { "value": "top", "label": "Top Bar" }
          ],
          "default": "sidebar"
        },
        {
          "type": "number",
          "id": "products_per_page",
          "label": "Products Per Page",
          "default": 24,
          "min": 12,
          "max": 48,
          "step": 12
        }
      ]
    }
  ]
}