{
  "id": "base",
  "name": "Base Theme",
  "version": "1.0.0",
  "minPlatformVersion": "1.0.0",
  "maxPlatformVersion": "2.0.0",
  "author": "Platform Team",
  "description": "Clean and modern base theme for e-commerce",
  "preview": "/themes/base/preview.png",
  "entryPoints": {
    "main": "index.ts",
    "sections": "sections",
    "blocks": "blocks",
    "styles": "styles/theme-styles.js",
    "config": "theme.json"
  },
  "capabilities": [
    "cart",
    "checkout",
    "search",
    "filters",
    "product-variants",
    "collections"
  ],
  "settings": {
    "colors": ["primary", "secondary", "accent", "background", "text"],
    "typography": ["headingFont", "bodyFont", "baseFontSize"],
    "layout": ["containerWidth", "sectionPadding", "elementSpacing"]
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "clsx": "^2.0.0"
  },
  "peerDependencies": {
    "next": "^15.0.0"
  }
}