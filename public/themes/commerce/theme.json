{
  "name": "Commerce Pro",
  "version": "1.0.0",
  "description": "Modern e-commerce theme with flexible layouts",
  "author": "Nuvi SaaS",
  "settings": {
    "colors": {
      "activeScheme": {
        "type": "select",
        "label": "Color Scheme",
        "default": "default",
        "options": [
          { "value": "default", "label": "Default" },
          { "value": "dark", "label": "Dark Mode" },
          { "value": "ocean", "label": "Ocean Blue" },
          { "value": "forest", "label": "Forest Green" },
          { "value": "sunset", "label": "Sunset Orange" },
          { "value": "custom", "label": "Custom" }
        ]
      },
      "primary": {
        "type": "color",
        "label": "Primary Color",
        "default": "#8B9F7E"
      },
      "secondary": {
        "type": "color",
        "label": "Secondary Color", 
        "default": "#2B2B2B"
      },
      "accent": {
        "type": "color",
        "label": "Accent Color",
        "default": "#666666"
      },
      "background": {
        "type": "color",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      "text": {
        "type": "color",
        "label": "Text Color",
        "default": "#2B2B2B"
      },
      "border": {
        "type": "color",
        "label": "Border Color",
        "default": "#E5E5E5"
      },
      "success": {
        "type": "color",
        "label": "Success Color",
        "default": "#10B981"
      },
      "error": {
        "type": "color",
        "label": "Error Color",
        "default": "#EF4444"
      }
    },
    "typography": {
      "headingFont": {
        "type": "font-picker",
        "label": "Heading Font",
        "default": "Playfair Display",
        "category": "serif"
      },
      "bodyFont": {
        "type": "font-picker",
        "label": "Body Font",
        "default": "Inter",
        "category": "sans-serif"
      },
      "baseFontSize": {
        "type": "range",
        "label": "Base Font Size",
        "default": 16,
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px"
      },
      "headingScale": {
        "type": "range",
        "label": "Heading Scale",
        "default": 1.25,
        "min": 1.1,
        "max": 1.5,
        "step": 0.05
      },
      "lineHeight": {
        "type": "range",
        "label": "Line Height",
        "default": 1.6,
        "min": 1.2,
        "max": 2,
        "step": 0.1
      }
    },
    "layout": {
      "fullWidth": {
        "type": "toggle",
        "label": "Full Width Layout",
        "default": false,
        "description": "Use full browser width"
      },
      "containerWidth": {
        "type": "range",
        "label": "Container Width",
        "default": 1200,
        "min": 1000,
        "max": 1600,
        "step": 50,
        "unit": "px"
      },
      "sectionPadding": {
        "type": "range",
        "label": "Section Padding",
        "default": 80,
        "min": 0,
        "max": 120,
        "step": 5,
        "unit": "px"
      },
      "elementSpacing": {
        "type": "range",
        "label": "Element Spacing",
        "default": 20,
        "min": 0,
        "max": 60,
        "step": 5,
        "unit": "px"
      },
      "borderRadius": {
        "type": "select",
        "label": "Border Radius",
        "default": "md",
        "options": [
          { "value": "none", "label": "None (0px)" },
          { "value": "sm", "label": "Small (4px)" },
          { "value": "md", "label": "Medium (8px)" },
          { "value": "lg", "label": "Large (12px)" },
          { "value": "xl", "label": "Extra Large (16px)" },
          { "value": "2xl", "label": "2X Large (24px)" }
        ]
      },
      "contentAlignment": {
        "type": "select",
        "label": "Content Alignment",
        "default": "left",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" },
          { "value": "right", "label": "Right" }
        ]
      }
    },
    "animations": {
      "enableAnimations": {
        "type": "toggle",
        "label": "Enable Animations",
        "default": true
      },
      "animationSpeed": {
        "type": "select",
        "label": "Animation Speed",
        "default": "normal",
        "options": [
          { "value": "slow", "label": "Slow" },
          { "value": "normal", "label": "Normal" },
          { "value": "fast", "label": "Fast" }
        ]
      },
      "transitionDuration": {
        "type": "range",
        "label": "Transition Duration",
        "default": 300,
        "min": 100,
        "max": 1000,
        "step": 50,
        "unit": "ms"
      },
      "sectionEntrance": {
        "type": "select",
        "label": "Section Entrance",
        "default": "fade",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "fade", "label": "Fade In" },
          { "value": "slide-up", "label": "Slide Up" },
          { "value": "slide-down", "label": "Slide Down" },
          { "value": "slide-left", "label": "Slide Left" },
          { "value": "slide-right", "label": "Slide Right" },
          { "value": "zoom", "label": "Zoom In" }
        ]
      },
      "hoverEffect": {
        "type": "select",
        "label": "Hover Effect",
        "default": "scale",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "scale", "label": "Scale" },
          { "value": "lift", "label": "Lift" },
          { "value": "glow", "label": "Glow" }
        ]
      },
      "parallax": {
        "type": "toggle",
        "label": "Enable Parallax",
        "default": false
      },
      "smoothScroll": {
        "type": "toggle",
        "label": "Smooth Scroll",
        "default": true
      }
    }
  },
  "sections": [
    "announcement-bar",
    "header",
    "hero-banner",
    "featured-products",
    "collections",
    "product-recommendations",
    "newsletter",
    "footer"
  ],
  "templates": [
    "homepage",
    "product",
    "collection",
    "cart",
    "page",
    "search",
    "account"
  ]
}